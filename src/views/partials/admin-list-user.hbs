<div class="box box-link-hover-shadow">
    <h1 class="title">All Users</h1>
    {{#each allUsers}}
    <div class="box box-link-hover-shadow">
        <h2 class="title">
            {{firstName}} {{lastName}}
        </h2>
        <div class="block">
            <p><strong>Email: </strong>{{email}}</p>
        </div>

        <a href="/dashboard/deleteuser/{{_id}}" class="button">
            <span class="icon is-small">
                <i class="fas fa-trash"></i>
            </span>
        </a>
    </div>
    {{/each}}
</div>